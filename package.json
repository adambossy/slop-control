{
  "name": "slop-control",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "server"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:workspaces": "(cd packages/github-repo-snapshot && bun run build) && (cd server && bun run build)",
    "build:all": "bun run build:workspaces && bun run build",
    "preview": "vite preview",
    "lint": "bunx eslint . --max-warnings=0",
    "typecheck": "bunx tsc --noEmit --pretty false",
    "format": "bunx prettier --write .",
    "format:check": "bunx prettier --check .",
    "test": "bun test --bail",
    "prepare": "husky",
    "server:dev": "bunx tsx watch server/src/index.ts",
    "server:build": "tsc -p tsconfig.server.json",
    "server:start": "node --enable-source-maps server/dist/index.js",
    "generate:architecture-diagram:mermaid": "bun run scripts/generate-architecture-diagram-mermaid.ts",
    "generate:architecture-diagram:dot": "bun run scripts/generate-architecture-diagram-dot.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/express": "^4.17.21",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/svg-pan-zoom": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.38.0",
    "husky": "^9.1.6",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@slop/github-repo-snapshot": "workspace:*",
    "@viz-js/viz": "^3.20.0",
    "express": "^4.21.1",
    "mermaid": "^11.12.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "svg-pan-zoom": "^3.6.2",
    "zod": "^3.23.8"
  }
}
