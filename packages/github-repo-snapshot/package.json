{
  "name": "@slop/github-repo-snapshot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --watch --dts",
    "test": "vitest run"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "~5.9.3",
    "vitest": "^2.1.3"
  }
}
