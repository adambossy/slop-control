{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "server/dist",
    "rootDir": "server/src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "dompurify": ["./server/src/shims/dompurify.ts"]
    }
  },
  "include": ["server/src"]
}
